<Window x:Class="EcoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcoManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid Background="#FFEFD0D0">
		<Button x:Name="Login_Button" Content="Login" HorizontalAlignment="Center" Margin="0,303,0,0" VerticalAlignment="Top" BorderBrush="#FFF38787" Background="#FFEDA4A4"/>
		<PasswordBox x:Name="Password_Box" HorizontalAlignment="Center" Margin="0,249,0,0" VerticalAlignment="Top" Width="120"/>
		<Label x:Name="Login_Label" Content="Eco Manager" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" Height="50" Width="164" FontSize="24" FontWeight="Bold" RenderTransformOrigin="0.708,0.512"/>
		<TextBox x:Name="Username_Box" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Label Content="Password" HorizontalAlignment="Left" Margin="280,245,0,0" VerticalAlignment="Top"/>
		<Label Content="Username" HorizontalAlignment="Left" Margin="277,195,0,0" VerticalAlignment="Top"/>

	</Grid>
</Window>
